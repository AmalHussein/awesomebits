<section class="admin-pannel">
  <div class="avatar">
    <%= image_tag("avatar.jpg") %>
  </div>

  <% if current_user.can_invite? %>
    <%= link_to "Invite a trustee", new_invitation_path %>
  <% end %>
  <% if current_user.can_manage_permissions? %>
    <%= link_to "Manage user permissions", "#" %>
  <% end %>
  <a class="edit-profile" href="#">Edit Profile</a>
  <% if current_user.can_create_chapters? %>
    <%= link_to "Create Chapter", new_chapter_path %>
  <% end %>
  <a class="edit-users" href="#">Edit Users</a>
  <a class="edit-chapters" href="#">Edit Chapters</a>
</section>

<section class="applications">
  <section class="header">
    <h1>Finalists for <%= @chapter.name %></h1>
  </section>
  <table>
    <tr class="headers">
      <th>ID</th>
      <th>Votes</th>
      <th>Title</th>
    </tr>
    <% @projects.each do |project| %>
      <tr class="finalist">
        <td><%= project.id %></td>
        <td><%= project.vote_count %></td>
        <td><%= link_to project.title, project_path(project) %></td>
      </tr>
    <% end %>
  </table>
</section>
