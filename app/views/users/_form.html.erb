<%= simple_form_for user do |form| %>
  <%= form.input :first_name %>
  <%= form.input :last_name %>
  <%= form.input :email %>
  <%= form.input :bio, 
    :as => :text %>
  <%= form.input :url %>
  <%= form.input :twitter_username %>
  <%= form.input :facebook_url %>
  <%= form.input :linkedin_url %>
  <%= form.input :password, 
    :as         => :password, 
    :label      => "New password", 
    :input_html => {
      :auto_complete => "off" 
    } %>
  <%= form.button :submit %>
<% end %>
